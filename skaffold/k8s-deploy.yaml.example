apiVersion: v1
kind: Pod
metadata:
  name: kubevue
  namespace: kubevue
  labels:
    app: kubevue
spec:
  containers:
    - name: main
      image: kubevue
      command: ["sh", "-c"]
      args: ["./kubevue -verbose=debug"]
      env:
        - name: OIDC_CLIENT_ID
          value: ~
        - name: OIDC_CLIENT_SECRET
          value: ~
        - name: OIDC_PROVIDER
          value: ~
        - name: OIDC_REDIRECT_URL
          value: ~
        - name: OIDC_SCOPE
          value: ~
        - name: UI_ROOT_URL
          value: "/ui/#/"
      ports:
        - containerPort: 8080
      resources:
        limits:
          cpu: 1000m
          memory: 1000Mi
